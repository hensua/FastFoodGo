rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /*********************************************************************
     *                                                                   *
     *                      HELPER FUNCTIONS                             *
     *                                                                   *
     *********************************************************************/

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function getRole(userId) {
      return getUserData(userId).role;
    }

    function isAdmin() {
      // Check the user's own role from their user document
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }
    
    function isDriver() {
      return isSignedIn() && getRole(request.auth.uid) == 'driver';
    }
    
    function isCustomer() {
      return isSignedIn() && getRole(request.auth.uid) == 'customer';
    }

    /*********************************************************************
     *                                                                   *
     *                        TOP-LEVEL COLLECTIONS                      *
     *                                                                   *
     *********************************************************************/

    match /products/{productId} {
      allow read: if true;
      allow create: if (isSignedIn() && !exists(/databases/$(database)/documents/products/$(productId))) || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    match /users/{userId} {
      // Any signed-in user can read a user profile (for names, etc.)
      allow get: if isSignedIn();
      // Only admins can list all users for the management panel
      allow list: if isAdmin();
      // A user can create their own user document upon sign-up
      allow create: if isOwner(userId);
      // A user can update their own profile, but cannot change their role.
      // Admins can update any field, including the role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /users/{userId}/orders/{orderId} {
        // Customer can manage their own order.
        // Admin can manage any order.
        // Driver can get the order if they are assigned.
        allow get: if isOwner(userId) || isAdmin() || (isDriver() && get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.driverId == request.auth.uid);
        allow list, create: if isOwner(userId) || isAdmin();
        
        // A customer can only cancel their order if it is 'pending'.
        allow update: if (isOwner(userId) && request.resource.data.status == 'cancelled' && resource.data.status == 'pending')
                      // An admin can update any order (e.g., from pending to cooking).
                      || isAdmin()
                      // A driver can update an order to 'delivering' or 'delivered'.
                      || (isDriver() && (
                            // Driver can mark as 'delivering' if it's 'ready' and they are assigned.
                            (resource.data.status == 'ready' && request.resource.data.status == 'delivering' && request.resource.data.driverId == request.auth.uid) ||
                            // Driver can mark as 'delivered' if they are assigned and the correct PIN is provided.
                            (resource.data.driverId == request.auth.uid && request.resource.data.status == 'delivered' && resource.data.pin == request.resource.data.pin)
                          ));
        allow delete: if isOwner(userId) || isAdmin();
    }
    
    // This allows an admin OR a driver to query the 'orders' collection group for specific statuses.
    match /{path=**}/orders/{orderId} {
        allow list: if isAdmin() || isDriver();
    }
  }
}
