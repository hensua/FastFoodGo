rules_version = '2';

/**
 * @fileoverview Firestore Security Rules for the FastFoodGo application.
 *
 * @description
 * This ruleset implements a multi-role security model for a food delivery app,
 * catering to Customers, Drivers, Hosts, and Admins. It prioritizes strict
 * authorization through path-based ownership and role-checking.
 *
 * Core Philosophy:
 * - Customer Data Privacy: A user's personal data (profile, orders) is stored
 *   in a private subcollection under `/users/{userId}`, accessible only by them
 *   or an admin.
 * - Role-Based Access: Admin, Host, and Driver roles grant specific permissions.
 *   - Admins have god-mode access, managed via a separate `/roles_admin` collection
 *     for security and performance.
 *   - Hosts can view all orders to manage the kitchen but have limited write access.
 *   - Drivers can only read orders specifically assigned to them.
 *
 * Key Security Decisions:
 * - Admin Role Segregation: Admin status is granted by a document's existence in
 *   `/roles_admin/{userId}`. This is a robust pattern that avoids complex `get()`
 *   calls in other rules, preventing recursive permission issues.
 * - Explicit List Operations: Listing documents (e.g., all users or all orders
 *   from a specific user) is explicitly granted only to appropriate roles (admin).
 *   Unrestricted `collectionGroup` queries are implicitly denied.
 * - Denormalization for Authorization: Order documents contain `customerId` and
 *   `driverId`. This denormalization allows security rules to grant access without
 *   needing slow or insecure cross-collection `get()` calls.
 */
service cloud.firestore {
  match /databases/{database}/documents {

    /*********************************************************************
     *                                                                   *
     *                      HELPER FUNCTIONS                             *
     *                                                                   *
     *********************************************************************/

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Best practice: Check for existence in a separate admin role collection.
      // This is more performant and secure than checking a role field.
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isHost() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'host';
    }

    function isDriver() {
       return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
    }


    /*********************************************************************
     *                                                                   *
     *                        TOP-LEVEL COLLECTIONS                      *
     *                                                                   *
     *********************************************************************/
    
    /**
     * @description
     *   Stores the restaurant's product catalog. Publicly readable, but only
     *   administrators can manage products.
     */
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    /**
     * @description
     * Stores public user information.
     * - Users can create and manage their own profile.
     * - Admins can list and manage all user profiles.
     */
     match /users/{userId} {
        allow get, update: if isOwner(userId) || isAdmin();
        // Admins need to list users for the "Team" tab.
        allow list: if isAdmin();
        // A user can create their own document.
        allow create: if isOwner(userId);
        allow delete: if isAdmin();
     }

    /**
     * @description
     *   A user's order history, stored in a private subcollection.
     *   - Customers can manage their own orders.
     *   - Admins have full access.
     *   - Hosts can view orders for kitchen management.
     *   - Assigned drivers can read the order they are delivering.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId) || isAdmin() || isHost() || (isDriver() && resource.data.driverId == request.auth.uid);
      allow list: if isAdmin();
      allow create: if isOwner(userId) || isAdmin();
      // Allow customer to cancel, admin/host to manage status
      allow update: if isOwner(userId) || isAdmin() || isHost();
      allow delete: if isAdmin();
    }
    
    /**
     * @description
     *   Chat messages for a specific order.
     *   - The customer who owns the order can read/write.
     *   - The assigned driver can read/write.
     *   - Admins and hosts can read/write for support.
     */
    match /users/{userId}/orders/{orderId}/messages/{messageId} {
       allow read, write: if isOwner(userId) || isAdmin() || isHost() || (isDriver() && get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.driverId == request.auth.uid);
    }
    
    /**
     * @description Manages global admin roles. Existence of a doc grants admin rights.
     * @path        /roles_admin/{userId}
     * @allow       (get, list, create, delete) only for other admins to grant/revoke privileges.
     * @deny        all other access to prevent privilege escalation.
     */
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
